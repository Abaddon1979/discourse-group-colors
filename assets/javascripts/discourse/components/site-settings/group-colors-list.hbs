<div class="group-colors-list">
  {{#if this.groups}}
    {{#sortable-group onChange=this.updateOrder}}
      {{#each this.groups as |group|}}
        {{#sortable-item}}
          <div class="group-row">
            <div class="group-drag-handle">{{d-icon "bars"}}</div>
            <div class="group-name">{{group.name}}</div>
            <div class="group-color">
              <ColorInput @value={{group.color}} @onChange={{fn this.updateColor group}} />
            </div>
          </div>
        {{/sortable-item}}
      {{/each}}
    {{/sortable-group}}
  {{else}}
    <p>{{i18n "group_colors.loading"}}</p>
  {{/if}}
</div>